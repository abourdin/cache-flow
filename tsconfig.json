{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2022"
    ],
    "declaration": true,
    "rootDir": ".",
    "outDir": "build/compiled",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "typedocOptions": {
    "entryPoints": "./src/index.ts",
    "out": "docs",
    "readme": "./README.md",
    "theme": "default"
  }
}
